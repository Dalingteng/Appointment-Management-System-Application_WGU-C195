<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerController">
   <children>
      <Label layoutX="30.0" layoutY="40.0" text="Customer">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <TableView fx:id="customerTable" layoutX="14.0" layoutY="89.0" prefHeight="405.0" prefWidth="971.0">
        <columns>
          <TableColumn fx:id="customerIdColumn" prefWidth="81.0" text="Customer ID" />
          <TableColumn fx:id="customerNameColumn" prefWidth="184.0" text="Customer Name" />
            <TableColumn fx:id="addressColumn" prefWidth="156.0" text="Address" />
            <TableColumn fx:id="postalCodeColumn" prefWidth="114.0" text="Postal Code" />
            <TableColumn fx:id="phoneNumberColumn" prefWidth="160.0" text="Phone Number" />
            <TableColumn fx:id="divisionColumn" prefWidth="137.0" text="Division" />
            <TableColumn fx:id="countryColumn" prefWidth="137.0" text="Country" />
        </columns>
      </TableView>
      <Button fx:id="backButton" layoutX="15.0" layoutY="505.0" mnemonicParsing="false" onAction="#onBackButton" prefHeight="25.0" prefWidth="150.0" text="Back" />
      <Button fx:id="logOutButton" layoutX="834.0" layoutY="535.0" mnemonicParsing="false" onAction="#onLogOutButton" prefHeight="25.0" prefWidth="150.0" text="Log Out" />
      <Button fx:id="addCustomerButton" layoutX="474.0" layoutY="505.0" mnemonicParsing="false" onAction="#onAddCustomerButton" prefHeight="25.0" prefWidth="150.0" text="Add Customer" />
      <Button fx:id="modifyCustomerButton" layoutX="653.0" layoutY="505.0" mnemonicParsing="false" onAction="#onModifyCustomerButton" prefHeight="25.0" prefWidth="150.0" text="Modify Customer" />
      <Button fx:id="deleteCustomerButton" layoutX="833.0" layoutY="504.0" mnemonicParsing="false" onAction="#onDeleteCustomerButton" prefHeight="25.0" prefWidth="150.0" text="Delete Customer" />
   </children>
</AnchorPane>
